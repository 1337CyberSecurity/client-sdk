{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        "declaration": true,
        "sourceMap": true,
        "strict": false,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "outDir": "./dist",
    },
    "exclude": ["dist"]
}
